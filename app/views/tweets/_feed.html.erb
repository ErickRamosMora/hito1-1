<h1>Tweets</h1>


<div class="row">
  <div>
    <%= rel_next_prev_link_tags @tweets %>
    <%= link_to_next_page @tweets, 'More Tweets' %>
    <%= link_to_prev_page @tweets, 'Less Tweets' %>
  </div>
</div>



<table>
  <thead>
    <tr>
      <th>retweet</th>
      <th>Content</th>
      <th>User</th>

      <th>Retweet</th>
      <th>Retweet Count</th>


      <th colspan="3"></th>
    </tr>
  </thead>



  <% if user_signed_in? %>
    <%= render 'form', tweet: @tweet %>
  <% end %>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= button_to 'rt', create_rt_tweet_path(tweet), method: :post %></td>
        <td><%= tweet.content %></td>
        <td><img src="<%= tweet.user.img %>" class="image" alt=""></td>
        <td><%= tweet.retweet&.id %></td> 
        <td><%= tweet.retweets.count %></td> 

        <% if user_signed_in? %>
        <td>
            <% if tweet.liked?(current_user) %>
              <%= button_to 'Unlike', like_path(tweet), method: 'put', disabled: true %>
              <%= tweet.likes.count %>
            <% else %>
              <%= button_to 'Like', like_path(tweet), method: 'put' %>
              <%= tweet.likes.count %>
            <% end %>
        </td>
            <td><%= link_to 'Show', tweet %></td>
            <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
