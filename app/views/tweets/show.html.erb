<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>

<p>
  <strong>Img:</strong>
  <%= @tweet.img %>
</p>

<p>
  <strong>User:</strong>
  <%= @tweet.user_id %>
</p>


<% if user_signed_in? %>
  <% if @tweet.liked?(current_user) %>
    <%= button_to 'Like', like_path(@tweet), method: 'put', disabled: true %>
  <% else %>
    <%= button_to 'Like', like_path(@tweet), method: 'put' %>
  <% end %>
<% end %>


<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back', tweets_path %>
